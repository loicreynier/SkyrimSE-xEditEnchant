root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 80

[*.{nix,pas,bbcode}]
max_line_length = off

[*.md]
indent_size = unset
trim_trailing_whitespace = false
max_line_length = 100

[*.csv]
end_of_line = lf
insert_final_newline = false
indent_size = unset
indent_style = unset
max_line_length = off

[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4

[*.lock]
indent_size = unset
indent_style = unset
max_line_length = off
